<ul>
<% @failures.each do |failure| %>

 <div class='headers'>
 <div class='count'>
  	<%= failure.total %>
 </div>
  <span class='title'>
  	<%= failure.type %>
    <%= failure.klash if failure.klash %>
  	<span class='time'>
  		<div>
  			<%= time_ago_in_words(failure.updated_at) + " ago")  %>
  		</div>
  	</span>
  </span>
  <div class='message'><%= failure.message %></div>
</div>
  <div class='trace'><%= failure.syntax_highlighter(failure.format_backtrace).html_safe %></div>
  <hr>
<% end %>
</ul>